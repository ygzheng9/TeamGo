<%= simple_form_for(@task, remote: remote) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, label: "任务描述" %>

    <%= f.association :biz_owner, label_method: :display_name, value_method: :id, prompt: "请指定业务分析人员", include_blank: false %>

    <%= f.input :biz_plan_start_dt, as: :string, label: "计划开始", input_html: { readonly: true, class: :datepicker } %>
    <%= f.input :biz_plan_end_dt, as: :string, label: "计划结束", input_html: { readonly: true, class: :datepicker } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

<script type="text/javascript">
  $('.datepicker').datepicker({
    format: "yyyy/mm/dd",
    autoclose: true,
    todayHighlight: true
});
</script>